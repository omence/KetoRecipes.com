@using Microsoft.AspNetCore.Identity
@using KetoRecipies.Data
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject KetoDbContext context
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KetoRecipies</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.2/css/mdb.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>

<body class="justify-content-center bg-light">
    <header>
        <nav class="navbar shadow-none special-color-dark navbar-expand-lg">
            <a class="navbar-brand shadow-none ml-3" asp-area="" asp-controller="Home" asp-action="Index"><h3>KetoRecipies.com</h3></a>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#nav1" aria-controls="nav1" aria-expanded="false" aria-label="Toggle Navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse"></div>
            <div class="collapse navbar-collapse" id="nav1">
                <ul class="navbar-nav ml-auto">
                    @if (!SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light mr-auto" asp-area="Identity" asp-page="/Account/Register"><h3>Register</h3></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light mr-auto" asp-area="Identity" asp-page="/Account/Login"><h3>Login</h3></a>
                        </li>
                    }
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light mr-auto" href="~/Favorite"><h3>My Favorites</h3></a>
                        </li>

                        <form class="form-inline my-2 my-lg-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="nav-btn btn border">Logout</button>
                        </form>

                    }
                </ul>




            </div>

        </nav>
    </header>
    @{
        Random rnd = new Random();
        var randomRecipes = context.recipes.OrderBy(r => rnd.Next()).Take(10).ToList();
    }

    <div class="container mb-5">
        <div class="container-fluid">
            <div id="carousel-example" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner row w-100 mx-auto" role="listbox">
                    <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3 active">
                        <img src="@randomRecipes[0].ImageUrl" class="img-fluid mx-auto d-block" alt="img1">
                        <a href="@randomRecipes[0].SourceUrl" target="_blank">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@randomRecipes[0].Label</h5>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                        <img src="@randomRecipes[1].ImageUrl" class="img-fluid mx-auto d-block" alt="img2">
                        <a href="@randomRecipes[1].SourceUrl" target="_blank">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@randomRecipes[1].Label</h5>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                        <img src="@randomRecipes[2].ImageUrl" class="img-fluid mx-auto d-block" alt="img3">
                        <a href="@randomRecipes[2].SourceUrl" target="_blank">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@randomRecipes[2].Label</h5>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                        <img src="@randomRecipes[3].ImageUrl" class="img-fluid mx-auto d-block" alt="img4">
                        <a href="@randomRecipes[3].SourceUrl" target="_blank">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@randomRecipes[3].Label</h5>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                        <img src="@randomRecipes[4].ImageUrl" class="img-fluid mx-auto d-block" alt="img5">
                        <a href="@randomRecipes[4].SourceUrl" target="_blank">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@randomRecipes[4].Label</h5>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                        <img src="@randomRecipes[5].ImageUrl" class="img-fluid mx-auto d-block" alt="img6">
                        <a href="@randomRecipes[5].SourceUrl" target="_blank">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@randomRecipes[5].Label</h5>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                        <img src="@randomRecipes[6].ImageUrl" class="img-fluid mx-auto d-block" alt="img7">
                        <a href="@randomRecipes[6].SourceUrl" target="_blank">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@randomRecipes[6].Label</h5>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                        <img src="@randomRecipes[7].ImageUrl" class="img-fluid mx-auto d-block" alt="img8">
                        <a href="@randomRecipes[7].SourceUrl" target="_blank">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@randomRecipes[7].Label</h5>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                        <img src="@randomRecipes[8].ImageUrl" class="img-fluid mx-auto d-block" alt="img9">
                        <a href="@randomRecipes[8].SourceUrl" target="_blank">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@randomRecipes[8].Label</h5>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                        <img src="@randomRecipes[9].ImageUrl" class="img-fluid mx-auto d-block" alt="img10">
                        <a href="@randomRecipes[9].SourceUrl" target="_blank">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@randomRecipes[9].Label</h5>
                            </div>
                        </a>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carousel-example" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-example" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="page-footer font-small special-color-dark pt-4">
        <a class="nav-link text-light mr-auto" href="~/Home/Privacy">Privacy Policy</a>
        © 2019 Copyright:
        <a class="mb-3">KetoRecipies.com</a>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/scrollreveal/dist/scrollreveal.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.2/js/mdb.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
