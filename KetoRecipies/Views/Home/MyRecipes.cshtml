@model IEnumerable<KetoRecipies.Models.Recipe>

@{
    ViewData["Title"] = "MyRecipes";
}
    <a asp-action="Create"><h3 class="mt-3" style="color:deepskyblue;">Add a Recipe</h3></a>

<h5 class="mb-3"># of Recipes: @Model.Count()</h5>
<div class="container row ml-0">
    @foreach (var item in Model)
    {
        <div class="card-deck col">
            <div class="card text-center mb-3" style="width: 20rem;">
                <img src="@item.ImageUrl" class="card-img-top" />
                <div class="card-body text-center" style="align-self:center; width: 20rem;">
                    <h6 class="card-header" style="font-weight:bold; background-color:white;">
                        @item.Label
                    </h6>
                    <p><span style="font-weight:bold;">Nutrient Facts Per Serving:</span></p>
                    <p>Calories: @item.TotalCaloriesServ, Carbs: @item.TotalCarbsServ, Fat: @item.TotalFatServ</p>
                    <hr />

                    <a method="get" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>

                    <p class="card-title mt-2">
                        By: @item.Source
                    </p>
                </div>
            </div>
        </div>
    }
</div>

