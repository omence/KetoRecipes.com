@model KetoRecipies.Models.ChangePassword
<section class="hero is-small">
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title is-size-1">
                Update Password
            </h1>
        </div>
    </div>
</section>

<div class="card">
    <div class="card-body">
        <form method="post" asp-page-handler="ChangePassword">
            <label asp-for="Password" class="label">Current Password</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Current Password" />
            <label asp-for="NewPassword" class="label">New Password</label>

            <input asp-for="NewPassword" class="form-control" type="password" placeholder="Pick a strong password" />


            <label asp-for="ConfirmPassword" class="label">Confirm New Password</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" />


            <button class="btn btn-border" type="submit">Submit</button>
        </form>
    </div>
</div>

