@model KetoRecipies.Models.ChangePassword

<h1 class="mt-3 mb-3">
    Change Password
</h1>


<div class="card">
    <div class="card-body">
        <form method="post" asp-page-handler="ChangePassword">
            <label asp-for="Password" class="label">Current Password</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Current Password" required />
            <label asp-for="NewPassword" class="label">New Password</label>
            <input asp-for="NewPassword" class="form-control" type="password" placeholder="Pick a strong password" required />
            <label asp-for="ConfirmPassword" class="label">Confirm New Password</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" required />
            <button class="btn border mt-3" type="submit">Submit</button>
        </form>
    </div>
</div>

