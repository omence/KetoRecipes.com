@model KetoRecipies.Models.ViewModels.UserDashboardViewModel

<style>
    p, .link{
        font-size:20px;
    }
    label{
        font-weight:bold;
        margin:0px;
    }
</style>
@if(TempData["password"] != null)
{
    <div class="container text-center"><h2 style="color:green;">@TempData["password"]</h2></div>
}
    <div class="container"><h1 class="mt-5 ml-3">Your Dashboard</h1></div>
<div class="container text-left">
    <div class="card-deck col">
        <div class="card">
            <div class="card-body">
                <h2 class="card-header text-center">Account Stats</h2>
                <p class="mt-3">Total Recipes You Created: @Model.MyRecipesCount</p>
                <hr />
                <p>Total Favorites in Your My Favorites Section: @Model.TotalFavorites</p>
                <hr />
                <p>Total Comments in Recipes You Created: @Model.TotalComments</p>
                <hr />
                <p>Total Likes of Recipes You Created: @Model.TotalLikes</p>
                <hr />
                <p>Total Views of Recipes You Created: @Model.TotalViews</p>
            </div>
        </div>
        <div class="card text-center ">
            <div class="card-body">
                <h2 class="card-header text-center mb-3">Manage Account</h2>
                <a style="color:deepskyblue; font-size:20px;" href="#" data-toggle="modal" data-target="#password">Change Password</a><br />

                <div class="modal fade" id="password" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Change Password</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body text-left">
                                <form method="post" asp-action="ChangePassword">
                                    <div class="form-group">
                                        <label class="label">Current Password</label>
                                        <input name="Password" class="form-control mb-3" type="password" placeholder="Current Password" required />
                                    </div>
                                    <div class="form-group">
                                        <label class="label">New Password</label>
                                        <input name="NewPassword" class="form-control mb-3" type="password" placeholder="Pick a strong password" required />
                                    </div>
                                    <div class="form-group">
                                        <label class="label">Confirm New Password</label>
                                        <input name="ConfirmPassword" class="form-control mb-3" type="password" placeholder="Confirm password" required />
                                    </div>
                                    <div class="form-group">
                                        <button class="btn border mt-3" type="submit">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <a style="color:deepskyblue;font-size:20px;" class="mt-3" href="#" data-toggle="modal" data-target="#exampleModal">Update Social Media URLs</a>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Update Social Media URLs</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body text-left">
                                <form method="post" asp-action="UpdateSocialMedia">
                                    <label class="label">Facebook</label>
                                    <input value="@ViewBag.User.Facebook" name="facebook" class="form-control mb-3"/>
                                    <label class="label">YouTube</label>
                                    <input value="@ViewBag.User.YouTube" name="youTube" class="form-control mb-3"/>
                                    <label class="label">Instagram</label>
                                    <input value="@ViewBag.User.Instagram" name="instagram" class="form-control mb-3"/>
                                    <label class="label">Twitter</label>
                                    <input value="@ViewBag.User.Twitter" name="twitter" class="form-control mb-3"/>
                                    <button class="btn border mt-3" type="submit">Save Changes</button>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
